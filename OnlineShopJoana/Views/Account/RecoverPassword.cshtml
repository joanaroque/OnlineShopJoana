@model OnlineShopJoana.WEB.Models.RecoverPasswordViewModel

@{
    Layout = null;
}

<!DOCTYPE HTML>
<html lang="zxx">
<head>
    <title>Online plants shop - Login</title>
    <link href="~/login/css/style.css" rel='stylesheet' type='text/css' />
    <!-- online fonts-->
    <link href="https://fonts.googleapis.com/css?family=Amiri:400,400i,700,700i" rel="stylesheet">
    <link rel="stylesheet" href="~/template/style.css">
</head>

<body>
    <!--  particles  -->
    <div id="particles-js"></div>
    <!-- //particles -->

    <div class="w3ls-pos">
        <div class="pull-right">
            <a asp-area="" asp-controller="Home" asp-action="Index" style="color:#ffffff;">
                <i class="fa fa-home"></i> Plants Shop
            </a>
        </div>
        <br />
        <br />
        @if (ViewBag.Message == null)
        {

            <h1 style="color:#ffffff">Recover Password</h1>
            <div class="w3ls-login box">
                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="agile-field-txt">
                        <input asp-for="Email" class="form-control" type="email" name="Email" placeholder="info@example.com" />
                        <span asp-validation-for="Email" class="text-warning"></span>
                    </div>

                    <div class="w3ls-bot">
                        <input type="submit" value="Recover password" class="btn btn-success" />
                    </div>
                    <div class="agile_label">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-warning "><i class="fa fa-backward"> Login</i></a>

                    </div>
                    <div class="text-success">@ViewBag.UserMessage</div>
                </form>
            </div>
        }
        @if (ViewBag.Message != null)
        {
            <br />
            <br />
            <div class="agile_label">
                <h2 style="color:#ffffff">
                    Thank you,<br />
                    @ViewBag.Message
                </h2>
            </div>
        }
    </div>

    <!-- scripts required  for particle effect -->
    <script src="~/login/js/particles.min.js"></script>
    <script src="~/login/js/index.js"></script>
    <!-- //scripts required for particle effect -->
</body>

</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
