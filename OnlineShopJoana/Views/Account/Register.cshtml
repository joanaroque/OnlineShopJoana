@model OnlineShopJoana.WEB.Models.RegisterNewViewModel


@{
    Layout = null;
}

<!DOCTYPE HTML>
<html lang="zxx">
<head>
    <title>Online plants shop - Register</title>
    <link href="~/login/css/style.css" rel='stylesheet' type='text/css' />
    <!-- online fonts-->
    <link href="https://fonts.googleapis.com/css?family=Amiri:400,400i,700,700i" rel="stylesheet">
    <link rel="stylesheet" href="~/template/style.css">
</head>

<body>
    <!--  particles  -->
    <div id="particles-js"></div>
    <!-- //particles -->


    <div class="w3ls-pos">

        <div class="pull-right">
            <a asp-area="" asp-controller="Home" asp-action="Index" style="color:#ffffff;">
                <i class="fa fa-home"></i> Plants Shop
            </a>
        </div>

        @if (ViewBag.Message == null)
        {

            <h1 style="color:#ffffff">Register</h1>
            <div class="w3ls-login box">
                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="agile-field-txt">
                        <span asp-validation-for="FirstName" class="text-warning"></span>
                        <input asp-for="FirstName" type="text" class="form-control" name="FirstName" placeholder="First Name" />
                    </div>

                    <div class="agile-field-txt">
                        <input asp-for="LastName" type="text" class="form-control" name="LastName" placeholder="Last Name" />
                        <span asp-validation-for="LastName" class="text-warning"></span>
                    </div>

                    <div class="agile-field-txt">
                        <input asp-for="UserName" class="form-control" type="email" name="UserName" placeholder="info@example.com" />
                        <span asp-validation-for="UserName" class="text-warning"></span>
                    </div>

                    <div class="agile-field-txt">
                        <input asp-for="Address" type="text" class="form-control" name="Address" placeholder="Address" />
                        <span asp-validation-for="Address" class="text-warning"></span>
                    </div>

                    <div class="agile-field-txt">
                        <input asp-for="PhoneNumber" type="tel" class="form-control" name="PhoneNumber" placeholder="Telephone" />
                        <span asp-validation-for="PhoneNumber" class="text-warning"></span>
                    </div>


                    <div class="agile-field-txt">
                        <input asp-for="Password" type="password" class="form-control" name="Password" placeholder="Password: ********" id="myInput" />
                        <span asp-validation-for="Password" class="text-warning"></span>
                    </div>

                    <div class="agile-field-txt">
                        <input asp-for="Confirm" type="password" class="form-control" name="Confirm" placeholder="Confirm Password: ********" id="myInput" />
                        <span asp-validation-for="Confirm" class="text-warning"></span>
                        <div class="agile_label">
                            <label asp-for="IsResale" class="check" for="check3"><strong>Retail customer?</strong></label>
                            <input asp-for="IsResale" type="checkbox" id="check3" name="IsResale" />
                        </div>
                    </div>



                    <div class="w3ls-bot">
                        <input type="submit" value="Register New User" />
                    </div>

                    <div class="text-success">@ViewBag.UserMessage</div>
                </form>
            </div>
        }
        @if (ViewBag.Message != null)
        {
            <br />
            <br />
            <div class="agile_label">
                <h2 style="color:#ffffff">
                    Thank you,<br />
                    @ViewBag.Message
                </h2>
            </div>
        }
    </div>

    <!-- scripts required  for particle effect -->
    <script src="~/login/js/particles.min.js"></script>
    <script src="~/login/js/index.js"></script>
    <!-- //scripts required for particle effect -->
</body>

</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }

    </script>
}

