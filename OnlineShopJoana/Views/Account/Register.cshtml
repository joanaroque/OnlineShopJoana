<!DOCTYPE HTML>
<html lang="zxx">
<head>

    <link href="~/login/css/style.css" rel='stylesheet' type='text/css' />
    <!-- online fonts-->
    <link href="https://fonts.googleapis.com/css?family=Amiri:400,400i,700,700i" rel="stylesheet">
</head>

<body>
    <!--  particles  -->
    <div id="particles-js"></div>
    <!-- //particles -->
    <div class="w3ls-pos">
        <h1>Register</h1>
        <div class="w3ls-login box">

            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="agile-field-txt">
                    <span asp-validation-for="FirstName"></span>
                    <input asp-for="FirstName" type="text" name="FirstName" placeholder="First Name" />
                </div>
                <div class="agile-field-txt">
                    <span asp-validation-for="LastName"></span>
                    <input asp-for="LastName" type="text" name="LastName" placeholder="Last Name" />
                </div>
                <div class="agile-field-txt">
                    <span asp-validation-for="UserName"></span>
                    <input asp-for="UserName" type="email" name="Email" placeholder="info@example.com" />
                </div>

                <div class="agile-field-txt">
                    <span asp-validation-for="Address"></span>
                    <input asp-for="Address" type="text" name="Address" placeholder="Address" />
                </div>
                <div class="agile-field-txt">
                    <span asp-validation-for="PhoneNumber"></span>
                    <input asp-for="PhoneNumber" type="tel" name="PhoneNumber" placeholder="Phone Number" />
                </div>
                <div class="agile-field-txt">
                    <span asp-validation-for="CountryId"></span>
                    <select asp-for="CountryId" asp-items="Model.Countries"></select>
                    <input asp-for="CountryId" type="text" name="CountryId" placeholder="Country" />
                </div>
                <div class="agile-field-txt">
                    <span asp-validation-for="CityId"></span>
                    <select asp-for="CityId" asp-items="Model.Cities"></select>
                    <input asp-for="CityId" type="text" name="CityId" placeholder="City" />
                </div>
                <div class="agile-field-txt">
                    <span asp-validation-for="Password"></span>
                    <input asp-for="Password" type="Password" name="Password" placeholder="*********" />
                </div>
                <div class="agile-field-txt">
                    <span asp-validation-for="Confirm"></span>
                    <input asp-for="Confirm" type="Password" name="Confirm" placeholder="*********" />
                </div>
                <input type="submit" value="Register Now">
            </form>
        </div>
        <div class="footer-agile">
            <p>
                @ViewBag.Message
            </p>
        </div>
    </div>
</body>

</html>

<script src="~/login/js/particles.min.js"></script>
<script src="~/login/js/index.js"></script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {
            $("#CountryId").change(function () {
                $("#CityId").empty();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetCitiesAsync")',
                    dataType: 'json',
                    data: { countryId: $("#CountryId").val() },
                    success: function (cities) {
                        debugger;
                        $("#CityId").append('<option value="0">(Select a city...)</option>');
                        $.each(cities, function (i, city) {
                            $("#CityId").append('<option value="'
                                + city.id + '">'
                                + city.name + '</option>');
                        });
                    },
                    error: function (ex) {
                        alert('Failed to retrieve cities.' + ex);
                    }
                });
                return false;
            })
        });
    </script>

    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
}


