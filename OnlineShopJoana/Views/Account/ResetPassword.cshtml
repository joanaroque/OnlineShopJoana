@model OnlineShopJoana.WEB.Models.ResetPasswordViewModel

@{
    Layout = null;
}

<!DOCTYPE HTML>
<html lang="zxx">
<head>
    <title>Online plants shop - Login</title>
    <link href="~/login/css/style.css" rel='stylesheet' type='text/css' />
    <!-- online fonts-->
    <link href="https://fonts.googleapis.com/css?family=Amiri:400,400i,700,700i" rel="stylesheet">
    <link rel="stylesheet" href="~/template/style.css">
</head>

<body>
    <!--  particles  -->
    <div id="particles-js"></div>
    <!-- //particles -->

    <div class="w3ls-pos">
        <div class="pull-right">
            <a asp-area="" asp-controller="Home" asp-action="Index" style="color:#ffffff;">
                <i class="fa fa-home"></i> Plants Shop
            </a>
        </div>
        <br />
        <br />

        <h1 style="color:#ffffff">Reset Password</h1>
        <div class="w3ls-login box">

            <form method="post">
                <div asp-validation-summary="All"></div>
                <input type="hidden" asp-for="Token" />

                <div class="agile-field-txt">
                    <span asp-validation-for="UserName" class="text-warning"></span>
                    <input asp-for="UserName" type="email" name="UserName" placeholder="info@example.com" />
                </div>

                <div class="agile-field-txt">
                    <input asp-for="Password" type="password" name="password" placeholder="New password: ******" id="myInput" />
                    <span asp-validation-for="Password" class="text-warning"></span>
                </div>

                <div class="agile-field-txt">
                    <input asp-for="ConfirmPassword" type="password" name="ConfirmPassword" placeholder="Confirm password: ******" id="myInput" />
                    <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                </div>

                <div class="w3ls-bot">
                    <input type="submit" value="Reset password"/>
                </div>

                <div class="text-success">@ViewBag.UserMessage</div>
            </form>
        </div>
    </div>

    <!-- scripts required  for particle effect -->
    <script src="~/login/js/particles.min.js"></script>
    <script src="~/login/js/index.js"></script>
    <!-- //scripts required for particle effect -->
</body>

</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
